%% Title in bold sans. Code taken from savetrees.
\makeatletter
$if(sans_headings)$
\def\@maketitle{%
  \newpage
  \null
    \let \footnote \thanks
    {\Large\sffamily\bfseries\@title\par}
    $if(author)$
    \vskip 0.3\baselineskip
    \@author $if(email)$ \hphantom{ } \enspace | \enspace \texttt{\href{mailto:$email$}{$email$}}$endif$
    $endif$
    $if(gitdate)$
        \hfill \@date
    $else$$if(date)$
        \hfill \@date
        $endif$
    $endif$
  \par
\vskip \baselineskip
}
$else$
\def\@maketitle{%
  \newpage
  \null
  \begin{center}%
    \let \footnote \thanks
    {\Large\semib{\textssc{\@title}}\par}
    $if(author)$
    \vskip 0.1\baselineskip
    \begin{tabular}[t]{c}%
    \@author
  \end{tabular}\par
   $endif$
    $if(gitdate)$
        \vskip 0.1\baselineskip
        \@date
    $else$$if(date)$
        \vskip 0.1\baselineskip
        \@date
        $endif$
    $endif$
\end{center}%
\par
\vskip \baselineskip
}
$endif$
\makeatother

%% \signed{...}: flush right, newline when necessary
